---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import React from "./icons/React.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import Javascript from "./icons/Javascript.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-black text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "Javascript",
    class: "bg-black text-white",
    icon: Javascript,
  },
};
const PROJECTS = [
  {
    title: "SVGL - A beautiful library with SVG logos",
    description:
      "SVG logo library of the most popular brands. +10k visits per month. +2K svgs downloaded. Built from scratch with Next.js, React and Tailwind CSS.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    image: "/projects/svgl.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "AdventJS - Retos de programación con JavaScript y TypeScript",
    description:
      "Free platform with programming challenges. More than 1 million visits in one month. +50K challenges completed. Built from scratch with Next.js, React and Tailwind CSS.",
    link: "https://adventjs.dev",
    image: "/projects/adventjs.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Rick and Morty's Library",
    description:
      "Rick and Morty's Library where you can see information related of all Rick and Morty's show character. Made with React, Tailwind CSS and NextUI",
    link: "https://rick-and-morty-app-alpha-nine.vercel.app",
    image: "/projects/rickandmorty.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Prisma Store",
    description:
      "Fake Store created for educational purpose. Made with React, Tailwind CSS and NextUI",
    link: "https://prisma-store-one.vercel.app/",
    image: "/projects/prismastore.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "ToDo App",
    description:
      "Simple ToDo App that use for organize all my task for projects or studies schedule. Made with React, CSS",
    link: "https://prisma-store-one.vercel.app/",
    image: "/projects/todoapp.webp",
    tags: [TAGS.REACT, TAGS.CSS],
  },
  {
    title: "Brooklyn Fast Food Restaurant",
    description:
      "Landing page for one of the most important Fast Food Restaurant in Cartagena. Made with React, Tailwind CSS and NextUI",
    link: "https://brklyn-restaurant.vercel.app/",
    image: "/projects/brooklyn.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Chuck Norris Phrases",
    description:
      "Chuck Norris Phrases is a app where you can find some one the best meme's phrases created by the internet community about this legendary action's movies actor. Made with React, CSS",
    link: "https://chucknorris-app.netlify.app/",
    image: "/projects/chucknorris.webp",
    tags: [TAGS.REACT, TAGS.CSS],
  },
  {
    title: "Guess My Number",
    description:
      "Web game where you need to guess the hidden number I challenge you to try. Made with React, HTML, CSS and Javascript",
    link: "https://guess-my-name.netlify.app/",
    image: "/projects/guessnumber.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "Chuck Norris Phrases",
    description:
      "Web game where you need to get the high number is a good for play with your friend hope you like. Made with React, HTML, CSS and Javascript",
    link: "https://pig-game-appl.netlify.app/",
    image: "/projects/piggame.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top h-[15rem] h-[40rem] transition duration-500 sm:h-[15rem] md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
